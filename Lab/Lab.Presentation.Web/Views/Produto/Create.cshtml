@model Lab.Presentation.MVC.ViewModels.ProdutoViewModel

@using Lab.Presentation.MVC.Helpers

@{
    ViewBag.Title = "Inclusão de Produto";
}

<div class="page-header">
    <h2>Inclusão de Produto</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "error" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Preco, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Preco, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "error" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.TipoPromocao, new { @class = "form-label" })
                @Html.CustomEnumDropDownListFor(model => model.TipoPromocao, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoPromocao, "", new { @class = "error" })
            </div>
        </div>
    </div>

    <p>
        <input type="submit" value="Salvar" class="btn btn-success btn-cons" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default btn-cons" })
    </p>
}