@model IEnumerable<Lab.Presentation.MVC.ViewModels.CultureOptionVM>

<div class="culture">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var item = Model.ElementAt(i);
        @Html.ActionLink(item.Culture.ToUpper(), "Change", "Culture", new { culture = item.Culture }, new { @Class = item.Current ? "selected" : "" })
        if (i < Model.Count() - 1)
        {
            <span>|</span>
        }
    }
</div>